<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://employeeBrowse.caption"
        focusComponent="employeesTable"
        messagesPack="ru.expoforum.carservicecenter.web.screens.employee">
    <data readOnly="true">
        <collection id="employeesDc"
                    class="ru.expoforum.carservicecenter.entity.Employee">
            <view extends="_local"/>
            <loader id="employeesDl">
                <query>
                    <![CDATA[select e from carservicecenter_Employee e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800" resizable="true"/>
    <layout expand="employeesTable"
            spacing="true">
        <filter id="filter"
                applyTo="employeesTable"
                dataLoader="employeesDl">
            <properties include=".*"/>
        </filter>
        <table id="employeesTable"
               width="100%"
               dataContainer="employeesDc">
            <columns>
                <column id="firstName"/>
                <column id="lastName"/>
                <column id="birthDay"/>
                <column id="email"/>
                <column id="salary"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

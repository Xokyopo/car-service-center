<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://individualBrowse.caption"
        focusComponent="individualsTable"
        messagesPack="ru.expoforum.carservicecenter.web.screens.individual">
    <data readOnly="true">
        <collection id="individualsDc"
                    class="ru.expoforum.carservicecenter.entity.Individual">
            <view extends="_local"/>
            <loader id="individualsDl">
                <query>
                    <![CDATA[select e from carservicecenter_Individual e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="individualsTable"
            spacing="true">
        <filter id="filter"
                applyTo="individualsTable"
                dataLoader="individualsDl">
            <properties include=".*"/>
        </filter>
        <table id="individualsTable"
               width="100%"
               dataContainer="individualsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="passportNo"/>
                <column id="phone"/>
                <column id="email"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="individualsTable.create"/>
                <button id="editBtn" action="individualsTable.edit"/>
                <button id="removeBtn" action="individualsTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>

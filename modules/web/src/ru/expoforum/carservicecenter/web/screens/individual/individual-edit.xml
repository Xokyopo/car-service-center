<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://individualEdit.caption"
        focusComponent="form"
        messagesPack="ru.expoforum.carservicecenter.web.screens.individual">
    <data>
        <instance id="individualDc"
                  class="ru.expoforum.carservicecenter.entity.Individual">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                modal="true"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="individualDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textField id="passportNoField" property="passportNo"/>
                <textField id="phoneField" property="phone"/>
                <textField id="emailField" property="email"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

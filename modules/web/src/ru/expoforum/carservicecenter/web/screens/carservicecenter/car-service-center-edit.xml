<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://carServiceCenterEdit.caption"
        focusComponent="form"
        messagesPack="ru.expoforum.carservicecenter.web.screens.carservicecenter">
    <data>
        <instance id="carServiceCenterDc"
                  class="ru.expoforum.carservicecenter.entity.CarServiceCenter">
            <view extends="_local">
                <property name="city" view="_minimal"/>
                <property name="customers" view="_local"/>
                <property name="employees" view="_base"/>
                <property name="repairs" view="_local"/>
            </view>
            <loader/>
            <collection id="employeesDc" property="employees"/>
            <collection id="customersDc" property="customers"/>
            <collection id="repairsDc" property="repairs"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <facets>
        <lookupScreen id="sityModalLoockupScreen" openMode="DIALOG"
                      entityClass="ru.expoforum.carservicecenter.entity.City" field="cityField"
                      onAction="cityField.lookup"/>
    </facets>
    <layout spacing="true" expand="carServiceTabSheet">
        <tabSheet id="carServiceTabSheet">
            <tab id="CarServiceInfo" caption="msg://CarServiceInfo.caption"
                 margin="true,false,false,false" spacing="true">
                <form id="form" dataContainer="carServiceCenterDc">
                    <column width="350px">
                        <textField id="nameField" property="name"/>
                        <textField id="phoneField" property="phone"/>
                        <pickerField id="cityField" property="city">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="clear" type="picker_clear"/>
                            </actions>
                        </pickerField>
                        <textField id="addressField" property="address"/>
                    </column>
                </form>
            </tab>
            <tab id="CarServiceEmploeees" caption="msg://CarServiceEmploeees.caption" margin="true,false,false,false"
                 spacing="true" lazy="true"
                 expand="employeeTable">
                <table id="employeeTable" dataContainer="employeesDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="firstName"/>
                        <column id="lastName"/>
                        <column id="birthDay"/>
                        <column id="email"/>
                        <column id="salary"/>
                    </columns>
                    <buttonsPanel>
                        <button action="employeeTable.create"/>
                        <button action="employeeTable.edit"/>
                        <button action="employeeTable.remove"/>
                    </buttonsPanel>
                </table>
            </tab>
            <tab id="CarServiceRepairs" caption="msg://CarServiceRepairs.caption" margin="true,false,false,false"
                 spacing="true"
                 lazy="true" expand="repairsTable">
                <table id="repairsTable" dataContainer="repairsDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="description"/>
                    </columns>
                    <buttonsPanel>
                        <button action="repairsTable.create"/>
                        <button action="repairsTable.edit"/>
                        <button action="repairsTable.remove"/>
                    </buttonsPanel>
                </table>
            </tab>
            <tab id="CarServiceCustomers" caption="msg://CarServiceCustomers.caption" lazy="true" spacing="true"
                 margin="true,false,false,false" expand="customersTable">
                <table id="customersTable" dataContainer="customersDc" width="100%" height="200px">
                    <actions>
                        <action id="add" type="add">
                            <properties>
                                <property name="openMode" value="DIALOG"/>
                            </properties>
                        </action>
                        <action id="exclude" type="exclude"/>
                    </actions>
                    <buttonsPanel>
                        <button action="customersTable.add"/>
                        <button action="customersTable.exclude"/>
                    </buttonsPanel>
                    <columns>
                        <column id="name"/>
                        <column id="phone"/>
                        <column id="email"/>
                    </columns>
                </table>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>

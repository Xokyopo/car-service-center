<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:context="http://www.springframework.org/schema/context"
       xmlns:gui="http://schemas.haulmont.com/cuba/spring/cuba-gui.xsd"
       xmlns="http://www.springframework.org/schema/beans">

    <!-- Annotation-based beans -->
    <context:component-scan base-package="ru.expoforum.carservicecenter"/>

    <gui:screens base-packages="ru.expoforum.carservicecenter.web"/>
    <bean id="carservicecenter_proxyCreator" class="com.haulmont.cuba.web.sys.remoting.WebRemoteProxyBeanCreator">
        <property name="serverSelector" ref="cuba_ServerSelector"/>
        <property name="remoteServices">
            <map>
                <entry key="carservicecenter_CityService" value="ru.expoforum.carservicecenter.service.CityService"/>
            </map>
        </property>
    </bean>

</beans>